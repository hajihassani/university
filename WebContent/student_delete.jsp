<body>
	<div class="container">
		<h2>
			<a href="."><span class="badge badge-secondary">Back to Home Page</span></a>
		</h2>
	</div>
	
	<div class="container">
		<div class="alert alert-info" id="alerting"></div>
	</div>

<% Integer studentID = Integer.parseInt(request.getParameter("id")); %>
<% if(studentID != null) { %>
	<script>
		$(document).ready(function() {
			url = "api/students/dltstudent/" + <%= studentID %>
			$.get(url, function(data, status) {
				document.getElementById("alerting").innerHTML = data;
			});
		});
	</script>
<% } else { %>
	<script>
		document.getElementById("alerting").innerHTML = "Null ID!!!";
	</script>
<% } %>

